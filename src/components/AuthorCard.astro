---
interface Props {
    author: CollectionEntry<"author">;
}
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

const { author } = Astro.props;

const authorData = author.data;
---

<div class="max-w-lg mx-auto  bg-white rounded-lg shadow-md p-5">
    <Image
        class="w-32 h-32 rounded-full mx-auto"
        src={authorData.avatar}
        alt={authorData.name}
        width={100}
        height={100}
        quality="low"
        
    />
        <h2 class="text-center text-2xl font-semibold mt-3">
            {authorData.name}
        </h2>
        <p class="text-center text-gray-600 mt-1">{authorData.subtitle}</p>
        <div class="flex justify-center mt-5">
            <a href={`https://x.com/${authorData.twitter}`} class="text-blue-500 hover:text-blue-700 mx-3"
                >Twiter</a
            >
            <a href={authorData.linkedIn} class="text-blue-500 hover:text-blue-700 mx-3"
                >Linkedin</a
            >
            <a href={authorData.github} class="text-blue-500 hover:text-blue-700 mx-3"
                >GitHub</a
            >
        </div>
        <div class="mt-5">
            <h3 class="text-xl font-semibold">Bio</h3>
            <p class="text-gray-600 mt-2">{authorData.bio}</p>
        </div>
        <a class="text-blue-500 text-2xl hover:underline" href={`/blog/${author.id}`}>Sobre el autor</a>
    </Image>
</div>
