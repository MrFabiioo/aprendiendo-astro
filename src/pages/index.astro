---
import MainLayout from "@layout/MainLayout.astro";
import BlogPost from "@components/BlogPost.astro";
import {siteConfig,title} from "../config/site-config"


---

<MainLayout>
	<!-- component -->
<section class="bg-white dark:bg-gray-900">
    <div class="container px-6 py-10 mx-auto">
        <h1 class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white">{title}</h1>

        <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
			{siteConfig.map(({imgSrc,titlePost,date})=>(
                <BlogPost imgSrc={imgSrc} titlePost={titlePost} date={date} />
            ))}
        </div>
    </div>
</section>
</MainLayout>